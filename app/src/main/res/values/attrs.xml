<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShapeTextView">
        <!--是否使用Selector选择器-->
        <attr name="shape_openSelector" format="boolean" />
        <!--填充色-->
        <attr name="shape_solidColor" format="color" />
        <!--边框色-->
        <attr name="shape_strokeColor" format="color" />
        <!--按下填充色-->
        <attr name="shape_solidTouchColor" format="color" />
        <!--按下边框色-->
        <attr name="shape_strokeTouchColor" format="color" />
        <attr name="shape_textTouchColor" format="color" />
        <attr name="shape_textColor" format="color" />
        <!--边框宽度-->
        <attr name="shape_strokeWidth" format="dimension" />
        <attr name="shape_circular_angle" format="boolean"/>
        <!--圆角弧度-->
        <attr name="shape_radius" format="dimension" />
        <!--四个角的圆角弧度-->
        <attr name="shape_topLeftRadius" format="dimension" />
        <attr name="shape_topRightRadius" format="dimension" />
        <attr name="shape_bottomLeftRadius" format="dimension" />
        <attr name="shape_bottomRightRadius" format="dimension" />
        <!--虚线边框宽度-->
        <attr name="shape_dashWidth" format="dimension" />
        <!--虚线边框间隙-->
        <attr name="shape_dashGap" format="dimension" />
        <attr name="shape_press_select" format="enum" >
            <enum name="SELECT" value="0"></enum>
            <enum name="PRESS" value="1"></enum>
        </attr>
        <attr name="gradient_enableGradient" format="boolean"/>
        <attr name="gradient_startColor" format="color"/>
        <attr name="gradient_centerColor" format="color"/>
        <attr name="gradient_endColor" format="color"/>
        <attr name="gradient_orientation">
            <enum name="LEFT_RIGHT" value="0" />
            <enum name="TOP_BOTTOM" value="1" />
            <enum name="RIGHT_LEFT" value="2" />
            <enum name="BOTTOM_TOP" value="3" />
            <enum name="TL_BR" value="4" />
            <enum name="BL_TR" value="5" />
            <enum name="TR_BL" value="6" />
            <enum name="BR_TL" value="7" />
        </attr>
        <attr name="gradient_type">
            <enum name="linear" value="0"/>
            <enum name="radial" value="1"/>
            <enum name="sweep" value="2"/>
        </attr>
        <attr name="gradient_radius" format="float"/>
    </declare-styleable>
</resources>